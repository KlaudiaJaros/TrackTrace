<Window x:Class="TrackTrace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackTrace"
        mc:Ignorable="d"
         Title="Track and Trace" Height="440" Width="900" FontSize="22" Left="200" Top="200">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Track and Trace" Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="32" FontWeight="SemiBold" Margin="0,10"/>
        <TextBlock Text="Add records:" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="Record events:" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Search records:" Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" />


        <Button x:Name="AddUserBtn" Content="Add a new user"  Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="40,15" Click="AddUserBtn_Click" />
        <Button x:Name="AddLocationBtn" Content="Add a location"  Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" Margin="40,15" Click="AddLocationBtn_Click" />
        <Button x:Name="RecordContactBtn" Content="Record contact"  Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Margin="40,15" Click="RecordContactBtn_Click" />
        <Button x:Name="RecordVisitBtn" Content="Record visit"  Grid.Column="2" Grid.Row="3" Grid.ColumnSpan="2" Margin="40,15" Click="RecordVisitBtn_Click" />
        <Button x:Name="SearchContactsBtn" Content="By contacts"  Grid.Column="4" Grid.Row="2" Grid.ColumnSpan="2" Margin="40,15" Click="SearchContactsBtn_Click" />
        <Button x:Name="SearchLocationBtn" Content="By location"  Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2" Margin="40,15" Click="SearchLocationBtn_Click" />
    </Grid>
</Window>
